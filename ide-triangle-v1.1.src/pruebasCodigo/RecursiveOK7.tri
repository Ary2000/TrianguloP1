let

  recursive

    proc Ping (x : Integer) ~ if x > 0 then Impr ('I') ; Pong (x - 1) else skip end end

    |

    proc Pong (a : Integer) ~ if a > 0 then Impr ('O') ; Ping (a - 1) else skip end end

    |

    proc Impr (c : Char) ~ put (c) end

  end

in

  Pong (6) ! imprime OIOIOI

end
